{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Fire Danger Rating - Predicted Days per Year",
        "subtitle": "Predicted number of days per year that the AFDRS rating is at or above a certain severity. Source: CSIRO.",
        "fontSize": 20,
        "subtitleFontSize": 16
    },
    "width": 1000,
    "height": 650,
    "config": {
        "font": "Libre Baskerville"
      },
    "params": [
        {
            "name": "yearselection", 
            "value": 2030,
            "bind": {
                "input": "range",
                "name": "Year   ",
                "min": 2030,
                "max": 2090,
                "step": 20
            }
        },
        {
            "name": "rcpselection",
            "value": "rcp45",
            "bind": {
                "input": "select",
                "name": "Model:   ",
                "options": ["rcp45", "rcp85"],
                "labels": ["RCP 4.5", "RCP 8.5"]
    
              }
        }
    ],
    "projection": {"type": "equirectangular"},
    "layer": [

        {
            "data": {
                "url": "shape-data/big-map.topojson",
                "format": {"type": "topojson", "feature": "ne_50m_graticules_5"}

            },
            "mark": {"type": "geoshape", "fill":null, "stroke":"lightgray"}
        },
        {
            "data": {
                "url": "shape-data/big-map.topojson",
                "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}

            },
            "mark": {"type": "geoshape", "fill":"lightgray", "stroke":"white"}
        },
        {
            "data": {
                "url":"fire-danger2.csv"
            },
            "transform": [
                {"filter": "datum.Year == yearselection"},
                {"filter": "datum.Experiment == rcpselection && datum.Model == 'CESM1-CAM5'"},
                {"fold": ["High", "Very High", "Severe", "Extreme"], "as": ["Severity", "DPY"]}
            ],

            
            "mark": {"type": "circle", "opacity": 1},
            "encoding": {
                "longitude": {"field": "Lon", "type":"quantitative"},
                "latitude": {"field": "Lat", "type":"quantitative"},
                "size": {
                    "field": "DPY",
                    "type": "quantitative",
                    "scale": {
                        "domainMin": 0,
                        "domainMax": 365,
                        "rangeMin": 0,
                        "rangeMax": 6000
                    },
                    "legend": {
                        "title": "Days per Year",
                        "offset": -20,
                        "titleFontSize": 16,
                        "labelFontSize": 14
                    }
                },
                "color": {
                    "field": "Severity",
                    "type": "ordinal",
                    "scale": {
                        "domain": ["High", "Very High", "Severe", "Extreme"],
                        "range": ["yellow", "orange", "red", "darkred"]
                    },
                    "legend": {
                        "title": "Rating",
                        "titleFontSize": 16,
                        "symbolSize": 300,
                        "labelFontSize": 14
                    }
                },
                "tooltip": [
                    {
                        "field": "Severity",
                        "title": "Rating"
                    },
                    {
                        "field": "DPY",
                        "format": ".0f",
                        "title": "Days at or above rating"
                    }

                ]
            }
        }





    ]

    
}
